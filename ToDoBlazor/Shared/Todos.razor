<div class="container">
    <ul id="toDoItems" class="list-group align-self-sm-stretch mt-4">
        @foreach (var item in TodoItems.Items)
        {
        <li id="input" class="list-group-item d-flex justify-content-between align-items-center mb-2">@item.Text<button class="btn btn-danger"><i class="fa fa-remove"></i></button></li>

        }
    </ul>
</div>

@code {

    [Parameter]
    public TodoItems TodoItems { get; set; } 

}
